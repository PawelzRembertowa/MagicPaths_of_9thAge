<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
  >


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal">
    <TextView
        android:id="@+id/spell_number_row"
        android:text="No. "
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"

        />

    <TextView

        android:id="@+id/spell_list_row"
        android:text="Spell Name"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8">
    </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.7">

    <TextView

        android:id="@+id/casting_value_row"
        android:text="Casting Value"
        android:paddingLeft="15dp"
        android:textSize="11sp"
        android:layout_width="40dp"
        android:layout_height="wrap_content"/>
        //android:layout_weight="0.25"/>

    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/range_row"
        android:text="Range"
        android:textSize="11sp"
        android:layout_width="51dp"
        android:layout_height="wrap_content"/>
        //android:layout_weight="0.4"
        />

    <TextView
        android:paddingLeft="5dp"
        android:paddingRight="4dp"
        android:id="@+id/type_row"
        android:text="Type"
        android:textSize="11sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        //android:layout_weight="0.35"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="11dp"
        android:id="@+id/duration_row"
        android:text="Duration"
        android:textSize="11sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"/>

    <TextView
        android:id="@+id/effect_row"
        android:text="Effect"
        android:textSize="13sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        />



</LinearLayout>